<% provide(:title, @user.name) %>
<div class="container">
<div class="row">
  <aside class="col-md-4">
    <section>
      <h1>
        <%= @user.name %>
      </h1>
      <p>
        <%= @user.email %>
      </p>
    </section>
    <section>
      <%= render 'shared/stats' %>
    </section>
    <%= render 'follow_form', :user => @user if signed_in? %>
  </aside>
  <div class="col-md-8">
    <% if @user.weekends.any? %>
      <ul class="weekends" id="weekends">
        <%= render @weekends %>
      </ul>
      <%= link_to 'Load More Weekends', user_path(:page => @weekends.next_page), :class => 'load-more-weekends', :remote => true if @weekends.next_page %>
    <% end %>
  </div>
</div>
</div>